<header class="header_section">
  <div class="container-fluid">
    <nav class="navbar navbar-expand-lg custom_nav-container">
      <a class="navbar-brand" href="/">
        <span>
          Bookly
        </span>
      </a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class=""> </span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link pl-lg-0" href="/">Home
              <span class="sr-only">(current)</span></a>
          </li>


          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" {{! href="#" }} id="navbarDarkDropdownMenuLink" role="button"
              data-bs-toggle="dropdown" aria-expanded="false">
              Categories
            </a>

            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
              <li>
                <a class="dropdown-item" href="/view-product">Product Overview</span></a>
              </li>
              {{#each category}}
              <li><a class="dropdown-item"
                  href="/selected-category?category={{this.category}}">{{this.category}}</a></li>

              {{/each}}
            </ul>

          </li>

          <li class="nav-item">
            <a class="nav-link" href="/view-product">All products</a>

          </li>
          <li class="nav-item">
            <a class="nav-link bi bi-cart" href="/cart"> <img src="/public/product-images/cart.svg" alt="" width="30px"
                height=" 25px"><span class="badge badge-success" id="cart-count">{{cartCount}}</span></a>
          </li>

          <li class="nav-item">
            <a class="nav-link bi bi-cart" href="/wishlist"><img src="/public/product-images/heart.svg" alt="" width="30px" height="25px">
            <span class="badge badge-success"
                id="wish-count">{{wishCount}}</span></a>
          </li>
                    <li class="nav-item">
            <a class="nav-link" href="/orders">Orders</a>

          </li>
          <div class="btn-group ml-5">
            {{#if userData}}
            <a class="btn btn-outline-info" href="/profile/{{userData._id}}">{{userData.name}}</a>
            <a href="/logout" class="btn btn-outline-light">Log out</a>
            {{ else }}
            <a href="/login" class="btn btn-outline-info">Log in</a>
            {{/if}}

          </div>
        </ul>

      </div>
    </nav>
  </div>
</header>