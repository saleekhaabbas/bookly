<div class="main-content">
<section>
  <div class="row">
    <a href="/admin/add-product" class="btn btn-success ml-5 mt-5">Add Product</a>
  </div>
  <div class="container pt-3">
    <table class="table table-striped padding-top:10px" id="proTable">
      <thead>
        <tr>
          <th scope="col">Index</th>
          <th scope="col">Product Name</th>
          <th scope="col">Category Name</th>
          <th scope="col">Author Name</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
          <th scope="col">Edit Product</th>
          <th scope="col">Delete Product</th>

        </tr>
      </thead>
      <tbody>
        {{#each product}}
          <tr>
            <th scope="row">{{inc @index}}</th>
            <td>{{this.product}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.author}}</td>
            <td>{{this.price}}</td>
            <td><img
                style="width: 50px;height: 50px;"
                src="../../public/product-images/{{this.image}}"
                alt=""
              /></td>
            <td><a
                href="/admin/edit-product/{{this._id}}"
                class="btn btn-primary"
              >Edit</a></td>
            <td><a
                href="/admin/delete-product/{{this._id}}"
                class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete this category')"
              >Delete</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  
</section>
</div>
<script>
    $(document).ready(function () {


        $('#proTable').wrap('<div id="hide" style="display:none"/>');

        $('#hide').css('display', 'block');
    });


    var table = $('#proTable').DataTable();
</script>
