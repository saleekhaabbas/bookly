<div class="main-content">
  <section>
    <div class="row">
      <a href="/admin/add-message" class="btn btn-success ml-5 mt-5">Add
        Message</a>
    </div>
    <div class="container pt-3">
      <table class="table table-striped padding-top:10px" id="catTable">
        <thead>
          <tr>
            <th scope="col">Index</th>
            <th scope="col">Message 1</th>
            <th scope="col">Message 2</th>
             <th scope="col">Message 3</th>
          
         
            <th scope="col">Delete message</th>
          </tr>
        </thead>
        <tbody>
          {{#each message}}
            <tr>
              <th scope="row">{{inc @index}}</th>
              <td>{{this.name}}</td>
              <td>{{this.definition}}</td>
              <td>{{this.heading}}</td>
             
              <td><a
                  href="/admin/delete-message/{{this._id}}"
                  class="btn btn-danger"
                  onclick="return confirm('Are you sure you want to delete this message?')"
                >Delete</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </section>
</div>
<script>
    $(document).ready(function () {


        $('#catTable').wrap('<div id="hide" style="display:none"/>');

        $('#hide').css('display', 'block');
    });


    var table = $('#catTable').DataTable();
</script>