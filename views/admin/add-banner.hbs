<div class="main-content">
  <section>
    <div class="container padding-left:10px mt-5">
      <div class="col-md-6">
        <h2 class="text-center">Add Banner</h2>
        <form
          action="/admin/add-banner"
          method="post"
          id="userLogin"
          enctype="multipart/form-data"
        >
        <div class="form-outline mb-4">
            <input
              name="name"
              type="text"
              class="form-control"
              placeholder="Type name "
            />
          </div>
          <div class="form-outline mb-4">
            <input
              name="discription"
              type="text"
              class="form-control"
              placeholder="Type description"
            />
          </div>
        
          <div class="form-outline mb-4">
            <input
              name="heading"
              type="text"
              class="form-control"
              placeholder="Type a heading"
            />
          </div>

          <div class="form-outline mb-4">
            <input
              name="image"
              type="file"
              class="form-control"
              placeholder="Chose banner image"
            />
          </div>

          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </section>
</div>