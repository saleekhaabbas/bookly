<script src="https://cdn.jsdelivr.net/npm/chart.js@3.5.1/dist/chart.min.js"></script>
<script type="text/javascript"></script>

<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['COD', 'Razorpay'],
            datasets: [{
                label: 'payment methods',
                data: [{{totalCod}},{{OnlinePymentcount}}],
                backgroundColor: [
                    'rgba(24, 161, 26, 1)',
                    'rgba(54,162,235,1)',
                    'rgba(255,206,86,1)'
                ],
            }]

        },
        options: {
            responsive: true,
        },
    })

    var earning = document.getElementById('earning').getContext('2d');
    var myChart = new Chart(earning, {
        type: 'bar',
        data: {
            labels: ['pending' ,'Placed', 'shipped', 'delivered', 'cancelled  ',],
            datasets: [{
                label: 'Order Status',
                data: [{{pending.[0].number}},{{Placed.[0].number}},{{Shipped.[0].number}},{{Deliverd.[0].number}},{{Cancelled.[0].number}}],
                backgroundColor: [
                    'rgba(255, 206, 86, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255,99,132,1)',
                    'rgba(60, 170, 70, 1)',
                    'rgba(255, 0, 0, 1)',
                ],
            }]
        },
        options: {
            responsive: true,
        }
    });



</script>