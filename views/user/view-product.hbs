<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<div class="container mt-5 mb-5">
  <div class="row g-2">

    {{#each product}}

      <div class="col-md-3 mt-3 d-flex justify-content-center">
        <div class="card p-2">

          <div class="text-center">
            <img
              src="../../public/product-images/{{this.image}}"
              class="img-fluid"
              width="100"
            />
            <div class="d-flex justify-content-between align-items-center">
              <span class="category"><i><b>{{this.product}}</b></i></span>
              <span class="price">{{this.price}}</span>
            </div>
            <h5>{{this.Category}}</h5>
            <p>{{this.author}}</p>
          </div>
          <div class="content">

            <div class="buttons d-flex justify-content-center">
               {{!-- <button class="btn btn-primary"> Add to cart</button> --}}
              
               {{!-- <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button> --}}
               <button onclick="addToCart('{{this._id}}')" class="btn btn-outline-dark" style="font-family:sans-serif ;">Add to cart</button>
                 
             </div>
            <div>
              
                {{!-- <i onclick="addToWishlist('{{this._id}}'" class="fas fa fa fa-heart" att="0" style="color: grey"></i> --}}
                <a href="/add-to-wishlist/{{this._id}}" class="btn btn-primary">Add to Wishlist</a>
            
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

 

<link rel="stylesheet" type="text/css" href="/public/stylesheets/pro.css" />
{{!-- <link rel="stylesheet" type="text/css" href="/public/stylesheets/cart-icon.css"> --}}
<script src="/public/javascripts/script.js"></script>
<script src="/public/javascripts/wishlist.js"></script>
