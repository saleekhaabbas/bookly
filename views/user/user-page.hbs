<html>

  <head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Bostorek</title>

    <!-- bootstrap core css -->
    <link
      rel="stylesheet"
      type="text/css"
      href="public/user-asset/css/bootstrap.css"
    />
    <!-- font awesome style -->
    <link href="public/user-asset/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="public/user-asset/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="public/user-asset/css/responsive.css" rel="stylesheet" />

  </head>

  <body>

    <div class="hero_area">
      <!-- header section strats -->

      <!-- end header section -->
      <!-- slider section -->
      <section class="slider_section">
        <div id="customCarousel1" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            {{#each banner}}
            <div class="carousel-item active">
              <div class="container">
                <div class="row">
                  <div class="col-md-6">
                    <div class="detail-box">
                      <h5>
                        {{this.name}}
                      </h5>
                      <h1>
                        {{this.heading}}
                      </h1>
                      
                    <p>{{this.definition}}</p>
                     
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="img-box">
                      <img
              src="../../public/product-images/{{this.image}}"
              class="background-image"
              width="50%"
            height="50%"
            />
                    </div>
                  </div>
                  
                </div>
              </div>
            </div>
           {{/each}}
         
        </div>
      </section>
      <!-- end slider section -->
    </div>
     
    <!-- catagory section -->

    <section class="catagory_section layout_padding">
      <div class="catagory_container">
        <div class="container">
          <div class="heading_container heading_center">
            <h2>
              Books Categories
            </h2>
            <p>
              Categories of books include NA, YA, novels, and nonfiction,
              because they don't communicate anything about the book's content
              other than whether it's true or not, and sometimes the age range
              it's meant for. Genres of books say something about what the book
              is about.
            </p>
          </div>
          <div class="row">
            {{#each category}}
              <div class="col-sm-6 col-md-4">
                <div class="box">
                  <div class="img-thumbnail">
                    <img src="../../public/product-images/{{this.image}}"
                 class="img-fluid"
            width="200"/>
                  </div>

                  <div class="card-body">
                    <a href="/selected-category?category={{this.category}}"><h2 class="card-title"><b>{{this.category}}</b></h2></a>
                    <p class="card-text">{{this.description}}</p>

                  </div>

                </div>
              </div>
            {{/each}}

          </div>
        </div>
      </div>
    </section>

    <!-- end catagory section -->

    

    <!-- footer section -->
    <footer class="footer_section">
      <div class="container">
        <p>
          &copy;
          <span id="displayYear"></span>
          All Rights Reserved By
          <a href="https://html.design/">Free Html Templates</a>
        </p>
      </div>
    </footer>
    <!-- footer section -->
  </body>
</html>