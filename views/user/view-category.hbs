

<div class="container mt-5 mb-5">
  <div class="row g-2">
    {{#each selectedCat}}
    <div class="col-md-3 mt-3 d-flex justify-content-center">
      <div class="card p-2">
        
        <div class="text-center">
          <img
            src="../../public/product-images/{{this.image}}"
            class="img-fluid"
            width="100"
          />
           <div class="d-flex justify-content-between align-items-center">
            <span class="category"><i><b>{{this.product}}</b></i></span>
            <span class="price">{{this.price}}</span>
          </div>
          <h5>{{this.Category}}</h5>
          <p>{{this.author}}</p>
        </div>
        <div class="content">
          <div class="buttons d-flex justify-content-center">
  
            
            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<link rel="stylesheet" type="text/css" href="/public/stylesheets/pro.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="/public/javascripts/script.js"></script>