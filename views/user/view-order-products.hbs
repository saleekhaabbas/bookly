<div class="container mt-5 mb-5">
  <div class="row g-2">

    {{#each products}}

      <div class="col-md-3 mt-3 d-flex justify-content-center">
        <div class="card p-2">

          <div class="text-center">
            <img
              src="../../public/product-images/{{this.product.image}}"
              class="img-fluid"
              width="100"
            />
            <div class="content">
                <div class="d-flex justify-content-between align-items-center">
              <span class="category">{{this.product.product}}</span>
              
            </div>
            <span class="price">Rs.{{this.product.price}}</span>
              <h6>Quantity{{this.quantity}}</h6>
            </div>
            
            
    
          </div>
         
        </div>
      </div>
    {{/each}}
  </div>
</div>

<link rel="stylesheet" type="text/css" href="/public/stylesheets/pro.css">